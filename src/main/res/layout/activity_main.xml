<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rb3"
        android:layout_width="506dp"
        android:layout_height="112dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx1">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="488dp"
            android:layout_height="wrap_content"
            android:text="Graduate" />

        <RadioButton
            android:id="@+id/rd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="unGraduate" />

    </RadioGroup>

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/rb3"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="@+id/rb3"
        app:layout_constraintTop_toBottomOf="@+id/rb3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Course Name"
        app:layout_constraintStart_toStartOf="@+id/rb3"
        app:layout_constraintTop_toBottomOf="@+id/rb3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="57dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="76dp"
        android:text="Fees"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/hrs1"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="48dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/fee1"
        app:layout_constraintTop_toBottomOf="@+id/fee1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="32dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:text="Hours"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/fee1"
        android:layout_width="78dp"
        android:layout_height="23dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="64dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/sp1"
        app:layout_constraintTop_toBottomOf="@+id/sp1" />

    <CheckBox
        android:id="@+id/ch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Accomodation"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/ch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="56dp"
        android:text="Medical Insurance"
        app:layout_constraintStart_toStartOf="@+id/hrs1"
        app:layout_constraintTop_toBottomOf="@+id/hrs1" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="44dp"
        android:text="Total fees"
        app:layout_constraintStart_toStartOf="@+id/ch1"
        app:layout_constraintTop_toBottomOf="@+id/ch1" />

    <TextView
        android:id="@+id/tfees"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/ch2"
        app:layout_constraintTop_toBottomOf="@+id/ch2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="32dp"
        android:text="Total Hrs"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/thrs"
        android:layout_width="86dp"
        android:layout_height="16dp"
        android:layout_marginTop="36dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/tfees"
        app:layout_constraintTop_toBottomOf="@+id/tfees" />

</androidx.constraintlayout.widget.ConstraintLayout>